@using FormsWithHttpPost.DAL;
@using FormsWithHttpPost.Models;
@model Review
@{
    ViewBag.Title = "Squirrel Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>New Book Review</h1>

@using (Html.BeginForm("NextReview", "Home", FormMethod.Post))
{
    <div>
        @Html.Label("username", "Enter your username")
        @Html.TextBoxFor(m => m.Username)
    </div>
    <div>
        @Html.Label("starRating", "How many stars?")
        @Html.TextBoxFor(m => m.Rating)
    </div>
    <div>
        @Html.Label("title", "Provide a title")
        @Html.TextBoxFor(m => m.Title)
    </div>
    <div>
        @Html.Label("review", "Review")
        @Html.TextBoxFor(m => m.Message)
    </div>

    <button>Submit!</button>

}
