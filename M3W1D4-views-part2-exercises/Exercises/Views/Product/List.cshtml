@using Exercises.Models;

@model List<Product>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



        <h1><font size ="75">Toy Department</font></h1>
<div class="listContainer">
        @foreach(Product product in Model)
        {
            <div class="listDiv">
                <a href="/Product/Detail/@product.ProductId">
                    <img src="~/Content/images/@product.ImageName" class="toy" />
                </a>
                    @if (product.IsTopSeller)
                    {
                        <h4 class="name">@product.Name <font color="red">BEST SELLER!</font></h4>
                    }
                    else
                    {
                        <h4 class="name">@product.Name</h4>
                    }
                    <p class="mfr">by @product.Manufacturer</p>
                    <p class="price">$@product.Price</p>
                    <p class="weight"><strong>Weight</strong> @product.WeightIbLbs lbs</p>
                    @if (product.AverageRating < 2)
                    {
                        <img src="~/Content/images/1-star.png" class="star" />
                    }
                    @if (product.AverageRating >= 2 && product.AverageRating < 3)
                    {
                        <img src="~/Content/images/2-star.png" class="star" />
                    }
                    @if (product.AverageRating >= 3 && product.AverageRating < 4)
                    {
                        <img src="~/Content/images/3-star.png" class="star" />
                    }
                    @if (product.AverageRating >= 4 && product.AverageRating < 5)
                    {
                        <img src="~/Content/images/4-star.png" class="star" />
                    }
                    @if (product.AverageRating == 5)
                    {
                        <img src="~/Content/images/5-star.png" class="star" />
                    }
                <hr width="95%">
            </div>
        }
</div>
